<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/admincss/social.css">
    <title>Social</title>
</head>
<body>
    <!-- social -->
    <%- include('./admin/partials/header.ejs')-%>
<div class="contaner">
    <div class="sociallist">
        <h2>Social</h2>
        <div class="socialitems">
            <div class="icon">Icon</div>
            <div>URL</div>
            <div>
                <a class="btn" href="#"><i class="bi bi-trash"></i></a>
                <a class="btn" href="#"><i class="bi bi-pencil-square"></i></a>
            </div>
        </div>
        <% socialdatas.forEach(items=>{ %>
            <div class="socialitems">
                <div class="icon"><%- items.socialimage %></div>
                <div><%= items.socialurl %></div>
                <div>
                    <a class="btn" href="/admin/social/delete/<%= items.id %>"><i class="bi bi-trash"></i></a>
                    <a class="btn" href="/admin/social/edit/<%= items.id %>"><i class="bi bi-pencil-square"></i></a>
                </div>
            </div>
        <% }); %>
    </div>
    <form class="socialform" action="" method="post">
        <h2 class="formitems">Add One Social</h2>
        <p class="formitems">Icon from Bootstrap</p>
        <input class="formitems" type="text" name="icon" autocomplete="off" required>
        <p class="formitems">URL</p>
        <input class="formitems" type="text" name="url" autocomplete="off" required>
        <button class="formitems subbtn" type="submit">Submit</button>
    </form>
</div>
</body>
<script src="/script/adminheader.js"></script>
</html>