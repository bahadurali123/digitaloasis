<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/admincss/social.css">
    <title>Team</title>
</head>

<body>
    <%- include('./admin/partials/header.ejs')-%>
        <div class="contaner">
            <div class="teamlist">
                <h2>Our Team</h2>
                <div class="teamitems">
                    <div class="icon">Images</div>
                    <div>Titles</div>
                    <div>
                        <a class="btn" href="#"><i class="bi bi-trash"></i></a>
                        <a class="btn" href="#"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </div>
                <% data.forEach(items=>{ %>
                    <div class="teamitems">
                        <img class="teamimage" src="<%= items.teamimage %>" alt="image">
                        <div class="titles"><%= items.teamname %></div>
                        <div>
                            <a class="btn" href="/admin/team/delete/<%= items.id %>"><i class="bi bi-trash"></i></a>
                            <a class="btn" href="/admin/team/edit/<%= items.id %>"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    </div>
                <% }); %>
            </div>
            <form class="teamform" action="" method="post">
                <h2 class="formitems">Add Team</h2>
                <p class="formitems">Img url</p>
                <!-- <input type="file" name="image" id=""> -->
                <input class="formitems" type="text" name="image" autocomplete="off" required>
                <p class="formitems">Title</p>
                <input class="formitems" type="text" name="title" autocomplete="off" required>
                <p class="formitems">Discription</p>
                <input class="formitems" type="text" name="Discription" autocomplete="off" required>
                <button class="formitems subbtn" type="submit">Submit</button>
            </form>
        </div>
</body>
<script src="/script/adminheader.js"></script>
</html>