<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/admincss/social.css">
    <title>Admin Blog</title>
</head>

<body>
    <%- include('./admin/partials/header.ejs')-%>
        <div class="contaner">
            <div class="bloglist">
                <h2>Blog</h2>
                
                <div class="blogitems">
                    <div class="icon">Images</div>
                    <div>Titles</div>
                    <div>Date</div>
                    <div>
                        <a class="btn" href="#"><i class="bi bi-trash"></i></a>
                        <a class="btn" href="#"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </div>
                <div id="blogscontaner">
                <% blog.forEach(items=>{ %>
                    <div class="blogitems blogs">
                        <img class="teamimage" src="<%= items.blogimage %>" alt="image">
                        <div class="titles"><%= items.blogtitle.substring(0, 20).concat('...') %></div>
                        <div class="dates"><%= items.blogcreatedAt.toLocaleDateString() %></div>
                        <div class="icons">
                            <a class="btn" href="/admin/blog/delete/<%= items.id %>"><i class="bi bi-trash"></i></a>
                            <a class="btn" href="/admin/blog/edit/<%= items.id %>"><i
                                    class="bi bi-pencil-square"></i></a>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
            <form class="blogform" action="" method="post">
                <h2 class="formitems">Add blog</h2>
                <p class="formitems">Title</p>
                <input class="formitems" type="text" name="title" autocomplete="off" required>
                <p class="formitems">Discription</p>
                <!-- <input type="text" name="discription"> -->
                <textarea class="formitems" name="discription" id="blogdiscription" cols="30" rows="10" autocomplete="off"
                    required></textarea>
                <p class="formitems">auther</p>
                <input class="formitems" type="text" name="auther" autocomplete="off" required>
                <p class="formitems">source</p>
                <input class="formitems" type="text" name="source" autocomplete="off" required>
                <p class="formitems">category</p>
                <input class="formitems" type="text" name="category" autocomplete="off" required>
                <p class="formitems">Image URL</p>
                <input class="formitems" type="text" name="image" id="" autocomplete="off" required>
                <button class="formitems subbtn" type="submit">Submit</button>
            </form>
        </div>
</body>
<script src="/script/adminheader.js"></script>
</html>